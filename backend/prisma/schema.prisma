generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  createdAt       DateTime         @default(now())
  rolePermissions RolePermission[]
  users           User[]
}

model Permission {
  id              Int              @id @default(autoincrement())
  key             String           @unique
  name            String
  rolePermissions RolePermission[]
}

model RolePermission {
  id           Int        @id @default(autoincrement())
  roleId       Int
  permissionId Int
  enabled      Boolean    @default(true)
  createdAt    DateTime   @default(now())
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
}

model User {
  id                 Int               @id @default(autoincrement())
  email              String            @unique
  password           String
  roleId             Int
  firstName          String?
  lastName           String?
  mustChangePassword Boolean           @default(false)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  isArchived         Boolean           @default(false)
  role               Role              @relation(fields: [roleId], references: [id])
  cancelledInvoices  Invoice[]
  remindersCreated   InvoiceReminder[] @relation("ReminderCreatedBy")
  cancelLogs         CancelLog[]       @relation("CancelLogUser")
  payments           Payment[]         @relation("PaymentCreatedBy")
}

model Supplier {
  id           Int       @id @default(autoincrement())
  name         String
  email        String
  phone        String
  addressLine1 String    @default("")
  addressLine2 String?
  area         String    @default("")
  city         String    @default("")
  state        String    @default("")
  country      String    @default("")
  postalCode   String    @default("")
  isArchived   Boolean   @default(false)
  invoices     Invoice[]
  products     Product[]
}

model Buyer {
  id           Int       @id @default(autoincrement())
  name         String
  email        String
  phone        String
  gstin        String?
  addressLine1 String    @default("")
  addressLine2 String?
  area         String    @default("")
  city         String    @default("")
  state        String    @default("")
  country      String    @default("")
  postalCode   String    @default("")
  isArchived   Boolean   @default(false)
  invoices     Invoice[]
}

model Product {
  id           Int           @id @default(autoincrement())
  sku          String        @unique
  description  String?
  price        Float
  stock        Int
  supplierId   Int?
  category     String?
  title        String
  hsnCode      String?       @default("00000000")
  createdAt    DateTime      @default(now())
  isArchived   Boolean       @default(false)
  invoiceItems InvoiceItem[]
  supplier     Supplier?     @relation(fields: [supplierId], references: [id])
}

model Invoice {
  id            Int              @id @default(autoincrement())
  invoiceNo     String           @unique
  buyerId       Int
  supplierId    Int
  paymentMethod String
  total         Float
  status        String
  dueDate       DateTime?
  cancelledAt   DateTime?
  cancelledBy   Int?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  balance       Float            @default(0)
  serviceCharge Float            @default(0)
  signature     String?          @db.Text
  buyer         Buyer            @relation(fields: [buyerId], references: [id])
  supplier      Supplier         @relation(fields: [supplierId], references: [id])
  cancelledByUser User?          @relation(fields: [cancelledBy], references: [id])
  items         InvoiceItem[]
  reminders     InvoiceReminder[]
  cancelLogs    CancelLog[]
  payments      Payment[]

  @@index([status])
  @@index([dueDate])
}

model InvoiceItem {
  id          Int      @id @default(autoincrement())
  invoiceId   Int
  productId   Int?
  title       String
  description String?
  qty         Int
  price       Float
  gst         Float
  amount      Float
  discountPct Float
  hsnCode     String?
  invoice     Invoice  @relation(fields: [invoiceId], references: [id])
  product     Product? @relation(fields: [productId], references: [id])
}

model InvoiceReminder {
  id               Int      @id @default(autoincrement())
  invoiceId        Int
  toEmail          String
  sentAt           DateTime?
  status           String   @default("queued") // queued|sent|failed
  providerResponse String?  @db.Text
  createdBy        Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  invoice          Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  user             User?    @relation("ReminderCreatedBy", fields: [createdBy], references: [id])

  @@index([invoiceId])
  @@index([status])
}

model CancelLog {
  id             Int      @id @default(autoincrement())
  invoiceId      Int
  cancelledBy    Int
  reason         String   @db.Text
  forceCancelled Boolean  @default(false)
  cancelledAt    DateTime @default(now())
  invoice        Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  user           User     @relation("CancelLogUser", fields: [cancelledBy], references: [id])

  @@index([invoiceId])
}

model Payment {
  id          Int      @id @default(autoincrement())
  invoiceId   Int
  amount      Float
  roundOff    Float    @default(0)
  method      String   // Cash, Card, UPI, Bank Transfer
  reference   String?  // Transaction ref/check no
  receivedAt  DateTime @default(now())
  createdBy   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  user        User?    @relation("PaymentCreatedBy", fields: [createdBy], references: [id])

  @@index([invoiceId])
  @@index([receivedAt])
}
