generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  createdAt       DateTime         @default(now())
  rolePermissions RolePermission[]
  users           User[]
}

model Permission {
  id              Int              @id @default(autoincrement())
  key             String           @unique
  name            String
  rolePermissions RolePermission[]
}

model RolePermission {
  id           Int        @id @default(autoincrement())
  roleId       Int
  permissionId Int
  enabled      Boolean    @default(true)
  createdAt    DateTime   @default(now())
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
}

model User {
  id                 Int               @id @default(autoincrement())
  email              String            @unique
  password           String
  roleId             Int
  firstName          String?
  lastName           String?
  mustChangePassword Boolean           @default(false)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  isArchived         Boolean           @default(false)
  cancelLogs         CancelLog[]       @relation("CancelLogUser")
  cancelledInvoices  Invoice[]
  remindersCreated   InvoiceReminder[] @relation("ReminderCreatedBy")
  payments           Payment[]         @relation("PaymentCreatedBy")
  role               Role              @relation(fields: [roleId], references: [id])
}

model Supplier {
  id           Int       @id @default(autoincrement())
  name         String
  email        String
  phone        String
  addressLine1 String    @default("")
  addressLine2 String?
  area         String    @default("")
  city         String    @default("")
  country      String    @default("")
  postalCode   String    @default("")
  state        String    @default("")
  isArchived   Boolean   @default(false)
  invoices     Invoice[]
  products     Product[]
}

model Buyer {
  id           Int       @id @default(autoincrement())
  name         String
  email        String
  phone        String
  addressLine1 String    @default("")
  addressLine2 String?
  area         String    @default("")
  city         String    @default("")
  country      String    @default("")
  postalCode   String    @default("")
  state        String    @default("")
  gstin        String?
  isArchived   Boolean   @default(false)
  invoices     Invoice[]
}

model Product {
  id           Int           @id @default(autoincrement())
  sku          String        @unique
  description  String?
  price        Float
  stock        Int
  supplierId   Int?
  category     String?
  title        String
  createdAt    DateTime      @default(now())
  isArchived   Boolean       @default(false)
  hsnCode      String?       @default("00000000")
  taxRate      Float?        @default(18)
  taxType      String?       @default("withTax")
  invoiceItems InvoiceItem[]
  supplier     Supplier?     @relation(fields: [supplierId], references: [id])
}

model Invoice {
  id              Int               @id @default(autoincrement())
  invoiceNo       String            @unique
  buyerId         Int
  supplierId      Int?
  /// @deprecated Use Payment.method instead. This field is kept for backward compatibility only.
  /// Do NOT use in business logic. Individual payments have their own methods.
  paymentMethod   String?
  total           Float
  status          String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  balance         Float             @default(0)
  serviceCharge   Float             @default(0)
  signature       String?
  cancelledAt     DateTime?
  cancelledBy     Int?
  dueDate         DateTime?
  invoiceDate     DateTime          @default(now())
  notes           String?           // Invoice notes/comments
  extraCharges    Json?             // Extra charges [{id, name, amount}]
  cancelLogs      CancelLog[]
  buyer           Buyer             @relation(fields: [buyerId], references: [id])
  cancelledByUser User?             @relation(fields: [cancelledBy], references: [id])
  supplier        Supplier?         @relation(fields: [supplierId], references: [id])
  items           InvoiceItem[]
  reminders       InvoiceReminder[]
  payments        Payment[]

  @@index([status])
  @@index([dueDate])
  @@index([invoiceDate])
}

model InvoiceItem {
  id          Int      @id @default(autoincrement())
  invoiceId   Int
  productId   Int?
  title       String
  description String?
  qty         Int
  price       Float
  gst         Float
  amount      Float
  discountPct Float
  hsnCode     String?
  invoice     Invoice  @relation(fields: [invoiceId], references: [id])
  product     Product? @relation(fields: [productId], references: [id])
}

model InvoiceReminder {
  id               Int       @id @default(autoincrement())
  invoiceId        Int
  toEmail          String
  sentAt           DateTime?
  status           String    @default("queued")
  providerResponse String?
  createdBy        Int?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  user             User?     @relation("ReminderCreatedBy", fields: [createdBy], references: [id])
  invoice          Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@index([status])
}

model CancelLog {
  id             Int      @id @default(autoincrement())
  invoiceId      Int
  cancelledBy    Int
  reason         String
  forceCancelled Boolean  @default(false)
  cancelledAt    DateTime @default(now())
  user           User     @relation("CancelLogUser", fields: [cancelledBy], references: [id])
  invoice        Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

model Payment {
  id         Int      @id @default(autoincrement())
  invoiceId  Int
  amount     Float
  method     String
  reference  String?
  receivedAt DateTime @default(now())
  createdBy  Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  roundOff   Float    @default(0)
  user       User?    @relation("PaymentCreatedBy", fields: [createdBy], references: [id])
  invoice    Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@index([receivedAt])
}
